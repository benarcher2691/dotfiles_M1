font-size = 16

# remove ligatures
font-feature = -liga
font-feature = -calt
font-feature = -dlig

theme = Gruvbox Dark

auto-update = off

mouse-hide-while-typing = true

copy-on-select = clipboard
keybind = shift+enter=text:\n
# Swedish keyboard: Shift+Option+7 = backslash
keybind = shift+alt+seven=text:\\

